@model IEnumerable<GestionTareas.Models.Comentario>
@{
}
<h1>Lista de Comentarios</h1>
<hr />
<div class="text-end">
    <a asp-action="Create" class="btn btn-outline-primary">Crear</a>
</div>
<table class="table table-bordered">
    <thead class="bg-dark text-white">
        <tr>
            <th>Código</th>
            <th>Contenido</th>
            <th>Fecha Creación</th>
            <th>Tarea</th>
            <th>Usuario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Contenido</td>
                <td>@item.FechaCreacion</td>
                <td>@item.IdTareaNavigation.Nombre</td>
                <td>@item.IdUsuarioNavigation.Nombre</td>
                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-dark fs-4"><i class="bi bi-pencil"></i></a>
                    <a data-delete-url="@Url.Action("Delete", new { id = item.Id })" class="text-danger fs-4 c-pointer eliminar-registro"><i class="bi bi-trash"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>