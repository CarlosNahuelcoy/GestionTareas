@model GestionTareas.Models.Usuario
<h1>Editar Usuario</h1>

<div>
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" />
            <div>
                <span asp-validation-for="Nombre"></span>
            </div>
            <label class="form-label">Correo</label>
            <input type="text" class="form-control" asp-for="CorreoElectronico" />
            <div>
                <span asp-validation-for="CorreoElectronico"></span>
            </div>
            <label class="form-label">Contraseña</label>
            <input type="text" class="form-control" asp-for="Contrasena" />
            <div>
                <span asp-validation-for="Contrasena"></span>
            </div>
        </div>
        <div class="mt-3 text-end">
            <a asp-action="Index" class="btn btn-outline-info">Volver</a>
            <input type="submit" value="Editar" class="btn btn-outline-success" />
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}