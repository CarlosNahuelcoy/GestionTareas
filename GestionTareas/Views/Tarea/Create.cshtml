@model GestionTareas.Models.Tarea
@{
    ViewData["Title"] = "Crear Tarea";
}
<h1>Crear Tarea</h1>
<div>
    <form asp-action="Create">
        <div class="form-group">
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" />
            <div>
                <span asp-validation-for="Nombre"></span>
            </div>
            <label class="form-label">Descripción</label>
            <input type="text" class="form-control" asp-for="Descripcion" />
            <div>
                <span asp-validation-for="Descripcion"></span>
            </div>
            <label class="form-label">Fecha Creación</label>
            <input type="text" class="form-control datepicker" asp-for="FechaCreacion" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
            <div>
                <span asp-validation-for="FechaCreacion"></span>
            </div>
            <label class="form-label">Fecha Limite</label>
            <input type="text" class="form-control datepicker" asp-for="FechaLimite" />
            <div>
                <span asp-validation-for="FechaLimite"></span>
            </div>
            <label class="form-label">Estado</label>
            <input type="text" class="form-control" asp-for="Estado" />
            <div>
                <span asp-validation-for="Estado"></span>
            </div>
            <label class="form-label">Proyecto</label>
            <select class="form-control" asp-for="IdProyecto" asp-items="ViewBag.IdProyecto"></select>
        </div>
        <div class="mt-3 text-end">
            <a asp-action="Index" class="btn btn-outline-info">Volver</a>
            <input type="submit" class="btn btn-outline-success" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: 'dd-mm-yy'
            });
        });
    </script>
}